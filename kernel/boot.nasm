bits 16                 ; 16-битный режим
org 0x7C00             ; Адрес загрузки

start:
    ; Настройка сегментов
    mov ax, 0
    mov ds, ax
    mov es, ax
    mov ss, ax
    mov sp, 0x7C00      ; Установка стека
    
    ; Загрузка ядра с дискеты
    mov ah, 0x02        ; Функция чтения диска
    mov al, 1           ; Количество секторов для чтения
    mov ch, 0           ; Цилиндр
    mov cl, 2           ; Сектор (загрузочный сектор = 1)
    mov dh, 0           ; Головка
    mov bx, 0x7E00      ; Адрес загрузки ядра
    int 0x13
    
    ; Переход к ядру
    jmp 0x7E00

times 510-($-$$) db 0   ; Заполнение до 510 байт
dw 0xAA55               ; Сигнатура загрузочного сектора